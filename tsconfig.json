{
  "compilerOptions": {
    "lib": [
      "es2020"
    ],
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/*.ts"
  ]
}
