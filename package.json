{
  "name": "@facetlayer/candle",
  "version": "0.8.0",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "candle": "dist/main-cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cli": "./dist/main-cli.js"
  },
  "scripts": {
    "typecheck": "tsc -p .",
    "build": "node esbuild.config.js && dts-bundle-generator -o dist/index.d.ts src/index.ts --no-check",
    "dev": "node --watch src/main-cli.ts",
    "tsc": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "pnpm run build",
    "format": "prettier --write 'src/**/*.{ts,js,json}'"
  },
  "files": [
    "src",
    "dist",
    "tsconfig.json",
    "README.md"
  ],
  "dependencies": {
    "@facetlayer/sqlite-wrapper": "^0.9.1",
    "@facetlayer/streams": "^1.0.0",
    "@facetlayer/subprocess-wrapper": "^1.1.0",
    "@modelcontextprotocol/sdk": "1.12.1",
    "better-sqlite3": "11.8.1",
    "tree-kill": "1.2.2",
    "yargs": "17.7.2"
  },
  "devDependencies": {
    "@types/node": "^20.19.0",
    "@types/yargs": "17.0.33",
    "dts-bundle-generator": "9.5.1",
    "esbuild": "0.25.9",
    "expect-mcp": "0.8.0",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "4.3.0",
    "tsc-watch": "^7.1.1",
    "typescript": "^5.9.2",
    "vitest": "^3.0.6"
  }
}
