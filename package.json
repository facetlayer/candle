{
  "name": "@facetlayer/candle",
  "version": "0.10.0",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/src/index.d.ts",
  "bin": {
    "candle": "dist/main-cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cli": "./dist/main-cli.js"
  },
  "scripts": {
    "typecheck": "tsc -p .",
    "build": "node build.mts build",
    "prepublishOnly": "node build.mts validate && node build.mts build",
    "dev": "node --watch src/main-cli.ts",
    "tsc": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "prettier --write 'src/**/*.{ts,js,json}'",
    "local:install": "pnpm build && npm i -g ."
  },
  "files": [
    "src",
    "dist",
    "docs",
    "tsconfig.json",
    "README.md"
  ],
  "dependencies": {
    "@facetlayer/doc-files-helper": "^0.1.2",
    "@facetlayer/parse-stdout-lines": "^1.1.0",
    "@facetlayer/sqlite-wrapper": "^0.9.1",
    "@facetlayer/streams": "^1.0.0",
    "@facetlayer/subprocess-wrapper": "^1.1.0",
    "@modelcontextprotocol/sdk": "1.12.1",
    "better-sqlite3": "11.8.1",
    "yargs": "17.7.2"
  },
  "devDependencies": {
    "@facetlayer/build-config-nodejs": "^0.3.1",
    "@types/node": "^20.19.0",
    "@types/yargs": "17.0.33",
    "expect-mcp": "0.8.0",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "4.3.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.2",
    "vitest": "^3.0.6"
  }
}
