{
  "name": "@facetlayer/candle",
  "version": "0.7.1",
  "license": "MIT",
  "type": "module",
  "main": "dist/main-cli.js",
  "bin": {
    "candle": "dist/main-cli.js"
  },
  "scripts": {
    "typecheck": "tsc -p .",
    "build": "pnpm run build:esbuild",
    "build:esbuild": "node esbuild.config.js",
    "dev": "node --watch src/main-cli.ts",
    "dev:daemon": "node --watch src/main-daemon.ts",
    "tsc": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "pnpm run build",
    "format": "prettier --write 'src/**/*.{ts,js,json}'"
  },
  "files": [
    "src",
    "dist",
    "tsconfig.json",
    "README.md"
  ],
  "dependencies": {
    "@facetlayer/sqlite-wrapper": "^0.9.1",
    "@facetlayer/streams": "^1.0.0",
    "@facetlayer/subprocess-wrapper": "^1.1.0",
    "@modelcontextprotocol/sdk": "1.12.1",
    "better-sqlite3": "11.8.1",
    "tree-kill": "1.2.2",
    "yargs": "17.7.2"
  },
  "devDependencies": {
    "@types/node": "^20.19.0",
    "@types/yargs": "17.0.33",
    "esbuild": "0.25.9",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "4.3.0",
    "tsc-watch": "^7.1.1",
    "typescript": "^5.9.2",
    "vitest": "^3.0.6"
  }
}
